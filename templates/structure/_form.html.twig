<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
            {{ form_start(form) }}
            
            <div class="mb-3">
                {{ form_label(form.image_structure, 'Enter image', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.image_structure, {'attr': {'class': 'form-control', 'placeholder': 'Image'}}) }}
                {{ form_errors(form.image_structure) }}
            </div>
            
            <div class="mb-3">
                {{ form_label(form.content_structure, 'Enter optional content', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.content_structure, {'attr': {'class': 'form-control', 'placeholder': 'Optional'}}) }}
                {{ form_errors(form.content_structure) }}
            <div class="mb-3">
                {{ form_label(form.main, 'Choose a Main', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.main, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.main) }}
            </div>
            </div>
            
            
            {{ form_rest(form) }}
            
            <button class="btn btn-success w-100" type="submit">
                {{ button_label|default('Save') }}
            </button>
            
            {{ form_end(form) }}
        </div>
    </div>
</div>