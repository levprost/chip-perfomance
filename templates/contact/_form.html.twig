{{ form_start(form) }}

    <div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">

            <!-- Title Contact -->
            <div class="mb-3">
                {{ form_label(form.title_contact, 'Title', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.title_contact, {'attr': {'class': 'form-control', 'placeholder': 'Enter title'}}) }}
                {{ form_errors(form.title_contact) }}
            </div>
            
            <!-- Message Contact -->
            <div class="mb-3">
                {{ form_label(form.message_contact, 'Message', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.message_contact, {'attr': {'class': 'form-control', 'placeholder': 'Enter your message', 'rows': 5}}) }}
                {{ form_errors(form.message_contact) }}
            </div>
            
            <!-- Email -->
            <div class="mb-3">
                {{ form_label(form.email, 'Email', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Enter your email'}}) }}
                {{ form_errors(form.email) }}
            </div>
            
            <!-- Submit Button -->
            <button class="btn btn-success w-100" type="submit">
                {{ button_label|default('Submit') }}
            </button>
            
            

        </div>
    </div>
</div>

{{ form_end(form) }}
