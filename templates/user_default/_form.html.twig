{{ form_start(form) }}
   
    <div class="form-container">
    <h2 class="form-title">Customize Your Car</h2>
    <form method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="car-years" class="form-label">Select Year</label>
            <select name="car_year" id="car-years" class="form-control"></select>
        </div>
        <div class="form-group">
            <label for="car-makes" class="form-label">Select Make</label>
            <select name="car_make" id="car-makes" class="form-control"></select>
        </div>
        <div class="form-group">
            <label for="car-models" class="form-label">Select Model</label>
            <select name="car_model" id="car-models" class="form-control"></select>
        </div>
        <div class="form-group">
            {{ form_label(form.file, 'Upload Image or Video', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.file, {'attr': {'class': 'form-control', 'placeholder': 'Image/Video'}}) }}
            {{ form_errors(form.file) }}
        </div>
        {% if app.user.opption is same as ('yes') %}
        <button class="btn btn-primary mt-3">{{ button_label|default('Save') }}</button>
        {% endif %}
    </form>
</div>

{{ form_end(form) }}
