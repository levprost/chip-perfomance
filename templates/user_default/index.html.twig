{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>File</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>    
                <td>{{ user.file }}</td>
                <td>
                    <a href="{{ path('app_user_default_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('app_user_default_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_user_default_new') }}">Create new</a>
{% endblock %}
