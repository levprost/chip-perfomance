{% extends 'base.html.twig' %}

{% block title %}Main index
{% endblock %}

{% block body %}
	{% for main in mains %}
    <div class="main-block">
    {% if main.isVideo %}
        <video class="background-video" autoplay loop muted>
            <source src="{{ asset('uploads/videos/' ~ main.backgroundImage) }}" type="video/mp4">
        </video>
    {% else %}
        <img class="background-image" src="{{ asset('uploads/videos/' ~ main.backgroundImage) }}">
    {% endif %}
        <div class="content">
            <h1>{{ main.titleMain }}</h1>
            <h3>{{ main.optionalContent }}</h3>
            <ul class="structure-list">
            {% for structure in main.structures %}
                <p>{{ structure.contentStructure }}</p>
            {% endfor %}
        </div>
    </div>
{% else %}
    <p>No records found</p>
{% endfor %}


{% endblock %}
