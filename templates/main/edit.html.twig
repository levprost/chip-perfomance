{% extends 'base.html.twig' %}

{% block title %}Edit Main{% endblock %}

{% block body %}
<div class="container-fluid my-4">
    <h1 class="text-center mb-4">Changer Main</h1>

    <div class="row justify-content-center">
        <div class="col-12">
            {{ include('main/_form.html.twig') }}
        </div>
    </div>

    <div class="text-center mt-4">
        <a class="btn btn-primary" href="{{ path('app_main_index') }}">Back to List</a>
    </div>
    <div class="text-center mt-4">
        <form method="post" action="{{ path('app_main_delete', {'id': main.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');" style="display: inline;">
            <button class="btn btn-danger">Delete</button>
        </form>
    </div>
</div>
{% endblock %}
